{
    "api.version": "v1",
    "source": {
        "name": "Postgres Log",
        "hostName": "<%= scope.lookupvar('::hostname_full') %>",
        "sourceType": "LocalFile",
        "automaticDateParsing": true,
        "multilineProcessingEnabled": false,
        "useAutolineMatching": true,
        "forceTimeZone": false,
        "timeZone": "America/New_York",
        "defaultDateFormat": "dd/MMM/yyyy HH:mm:ss",
        "category": "Service/<%= scope.lookupvar('::tag_environment') %>/postgres",
        "pathExpression": "/var/lib/pgsql/9.4/pgstartup.log "
    }
}